{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		/* Basic Options */
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ES2022",
		"types": [],
		"paths": {
			"~encore/*": ["./encore.gen/*"],
			"~backend/*": ["./*"]
		},

		/* Workspace Settings */
		"composite": true,

		/* Strict Type-Checking Options */
		"strict": true,

		/* Module Resolution Options */
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"sourceMap": true,

		"declaration": true,

		/* Advanced Options */
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"encore.gen",
		"frontend/node_modules",
		"frontend-temp",
		"*.gen"
	]
}
